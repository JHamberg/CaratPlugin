<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="org.carat.plugin"
        version="1.0.2">
    <name>CaratPlugin</name>

    <engines>
    	<engine name="cordova-android" version=">=4.0.0-dev" />
    </engines>

	<platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CaratPlugin">
                <param name="android-package" value="org.carat.plugin.Echo"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <asset src="carat.js" target="carat.js" />

        <js-module src="carat.js" name="Echo">
            <clobbers target="carat" />
        </js-module>

        <source-file src="src/org/carat/plugin/Echo.java" target-dir="src/org/carat/plugin"/>
    </platform>
</plugin>